# SQL Server Configuration
ACCEPT_EULA=Y
SA_PASSWORD=YourPassword123!
MSSQL_PID=Express

# Override Kestrel URLs
Kestrel__Endpoints__Http__Url=http://+:80

# Database Connection
ConnectionStrings__DefaultConnection=Server=sqlserver;Database=EmployeeDB;User Id=sa;Password=YourPassword123!;TrustServerCertificate=true;Encrypt=false;

# JWT Configuration
Jwt__Key=default-secret-key-that-should-be-changed-in-production # Change this to a strong key in production, use openssl rand -base64 48
Jwt__Issuer=EmployeeManagementSystem
Jwt__Audience=EmployeeManagementUsers
Jwt__ExpireMinutes=15

# CORS Configuration
Cors__AllowedOrigins=http://localhost:3000,http://localhost:4200